<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:id="@+id/reset">

    <TableLayout
            android:layout_width="500dp"
            android:layout_height="251dp"
            android:stretchColumns="1" tools:layout_editor_absoluteY="147dp" tools:ignore="MissingConstraints">
        <TableRow>
            <TextView
                    android:id="@+id/textView"
                    android:text="@string/text_View"
                    android:padding="3dip" android:textAlignment="center" android:textStyle="bold"
                    android:layout_height="50dp" android:textSize="18sp" android:gravity="center_horizontal"
                    android:fontFamily="sans-serif" android:layout_width="231dp"/>
            <TextView
                    android:id="@+id/textView2"
                    android:text="@string/textView2"
                    android:padding="3dip" android:textAlignment="center" android:textStyle="bold"
                    android:layout_height="50dp" android:textSize="18sp" android:gravity="center_horizontal"
                    android:fontFamily="sans-serif" android:layout_width="265dp"/>
        </TableRow>

        <TableRow>
            <TextView
                    android:id="@+id/textView3"
                    android:text="@string/textView3"
                    android:padding="3dip" android:textAlignment="center" android:textStyle="bold"
                    android:layout_height="50dp" android:textSize="18sp" android:gravity="center_horizontal"
                    android:fontFamily="sans-serif"/>
            <TextView
                    android:id="@+id/textView4"
                    android:text="@string/textView4"
                    android:padding="3dip" android:textAlignment="center" android:textStyle="bold"
                    android:layout_height="50dp" android:textSize="18sp" android:gravity="center_horizontal"
                    android:fontFamily="sans-serif"/>
        </TableRow>
        <TableRow>
            <TextView
                    android:id="@+id/textView5"
                    android:text="@string/textView5"
                    android:padding="3dip" android:textAlignment="center" android:textStyle="bold"
                    android:layout_height="50dp" android:textSize="18sp" android:gravity="center_horizontal"
                    android:fontFamily="sans-serif"/>
            <TextView
                    android:id="@+id/textView6"
                    android:text="@string/textView6"
                    android:padding="3dip" android:textAlignment="center" android:textStyle="bold"
                    android:layout_height="50dp" android:textSize="18sp" android:gravity="center_horizontal"
                    android:fontFamily="sans-serif"/>
        </TableRow>
        <TableRow android:layout_height="50dp">
            <TextView
                    android:id="@+id/textView7"
                    android:text="@string/textView7"
                    android:padding="3dip" android:textAlignment="center" android:textStyle="bold"
                    android:layout_height="50dp" android:textSize="18sp" android:gravity="center_horizontal"
                    android:fontFamily="sans-serif"/>
            <TextView
                    android:id="@+id/textView8"
                    android:text="@string/textView8"
                    android:padding="3dip" android:textAlignment="center" android:textStyle="bold"
                    android:layout_height="50dp" android:textSize="18sp" android:gravity="center_horizontal"
                    android:fontFamily="sans-serif"/>
        </TableRow>
        <TableRow android:layout_height="50dp">
            <TextView
                    android:id="@+id/textView9"
                    android:text="@string/textView9"
                    android:padding="3dip" android:textAlignment="center" android:textStyle="bold"
                    android:layout_height="50dp" android:textSize="18sp" android:gravity="center_horizontal"
                    android:fontFamily="sans-serif"/>

        </TableRow>
    </TableLayout>
    <Button
            android:text="@string/btn_reset"
            android:id="@+id/button"
            android:onClick="sendMessage"
            android:layout_width="85dp"
            android:layout_height="48dp"
            android:background="@color/colorPrimary"
            android:textColor="#ffff"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" tools:ignore="MissingConstraints,OnClick"
            app:layout_constraintHorizontal_bias="0.913" app:layout_constraintVertical_bias="0.364"
    />


</androidx.constraintlayout.widget.ConstraintLayout>